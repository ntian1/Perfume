<section id="form">
		<div class="container">
			<div class="row">
				<div class="col-sm-4 col-sm-offset-1">
					<div class="login-form">
						<h2>Login to your account</h2>
                        <h2 class="errorH">{{error}}</h2>
						<form action="/users/login" method="post">
							<input name="username" id="username" type="text" placeholder="Name or Email Address" />
							<input name="password" id="password" type="password" placeholder="Password" />
							{{!-- <span>
								<input type="checkbox" class="checkbox">    cookie
								Keep me signed in
							</span> --}}
							<button type="submit" class="btn btn-default">Login</button>
						</form>
					</div>
				</div>
				<div class="col-sm-1">
					<h2 class="or">OR</h2>
				</div>
				<div class="col-sm-4">
					<div class="signup-form">
						<h2>New User Signup!</h2>
						<h2 class="errorH">{{error2}}</h2>
						<form action="/users/new" method="post">
							<input name="userName" id="username" type="text" placeholder="Name"/>
							<input name="Email" id="Email" type="email" placeholder="Email Address"/>
							<input name="hashedPassword" id="hashedPassword" type="password" placeholder="Password"/>
							
                            <select name='Gender' id='Gender' type='text' placeholder='gender'>
                            <option value='male'>male</option>
                            <option value='female'>female</option>
                            </select>
							<p></p>
							<input name='Age' id='Age' type='text' placeholder="Age"/>
							<button type="submit" class="btn btn-default">Signup</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>